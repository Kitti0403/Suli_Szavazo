generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Poll {
  id       Int      @id @default(autoincrement())
  question String
  // "SCHOOL", "CLASS"
  scope    String   @default("SCHOOL")
  options  Option[]
}

model Option {
  id    Int    @id @default(autoincrement())
  text  String
  votes Int    @default(0)

  // Kapcsolat
  pollId Int
  poll   Poll @relation(fields: [pollId], references: [id])
}
